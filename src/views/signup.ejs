<%- include('includes/header') %>

<link rel="stylesheet" type="text/css" href="/css/signup.css" />

<body>

   <div class="video-wrapper">
    <video autoplay muted loop class="background-video1">
      <source src="/vidyo/gullar-vidyo.mp4" type="video/mp4" />
    </video>
  <div class="signup-container">
    <form
      onsubmit="return validateSignupForm()"
      action="/admin/signup"
      method="POST"
      enctype="multipart/form-data"
    >
      <div class="signup-frame" >
        <div class="signup-top">
          <span>Signup</span>
          <div class="home-sugnup"><a href="/admin" style="color: #869c67">Home</a></div>
          <span>
            
            <a href="/admin/login" style="color: #869c67">Login</a>
          </span>
        </div>

        <div class="sign-input-frame" style="justify-content: space-between">
          <div class="sign-up-frame">
            <label>Flower *</label>
            <input
              type="text"
              name="memberNick"
              class="member-nick"
              placeholder="Username"
              value=""
            />
          </div>
          <div class="sign-up-frame">
            <label>Phone *</label>
            <input
              type="text"
              name="memberPhone"
              class="member-phone"
              placeholder="Phone"
              value=""
            />
          </div>
        </div>
        <div class="sign-input-frame" style="justify-content: space-between">
          <div class="sign-up-frame">
            <label>Password *</label>
            <input
              type="password"
              name="memberPassword"
              class="member-password"
              placeholder="Password"
              value=""
            />
          </div>
          <div class="sign-up-frame">
            <label>Repeat password *</label>
            <input
              type="password"
              name="confirmPassword"
              class="confirm-password"
              placeholder="Repeat password"
              value=""
            />
          </div>
        </div>

        <div class="signup-input-frame">
          <div class="media-frame">
            <img class="upload-img-frame" src="/img/default.jpg" />
            <div class="upload-container">
              <span class="media-text">Product image</span>
              <div
                class="file-box bs3-primary preview-image"
                style="margin-top: 25px; display: flex"
              >
                <input
                  class="upload-name"
                  value="Choose image"
                  disabled="disabled"
                />
                <label for="input-file" class="file-input-label"
                  >Upload Image</label
                >
                <input
                  type="file"
                  id="input-file"
                  class="upload-hidden form-control-file member-image"
                  name="memberImage"
                />
              </div>
              <p class="thumbnail-desc">
                Please upload restaurant image.<br />
                Attention only:.jpg, .jpeg, or .png. <br />
                formats allowed!
              </p>
            </div>
          </div>
        </div>

        <input name="memberType" value="RESTAURANT" hidden />

        <button class="signup-btn btn" name="signup" type="submit">
          Signup
        </button> 
        
          <a href="/auth/google"
   class="google-btn">
  <img src="https://developers.google.com/identity/images/g-logo.png"
       alt="Google logo"
       class="google-icon" />
  <span>Sign up with Google</span>
</a>
      </div>
   

    </form>
  </div>

  <script type="text/javascript" src="/js/signup.js"></script>
</body>

<%- include('includes/footer') %>
